<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leila.androidproject.Authentification">

    <TextView
        android:text="@string/titleAuthentification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36sp" />

    <TextView
        android:text="@string/labelPseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPseudo"
        android:textSize="24sp"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/inputPseudo"
        android:ems="10"
        android:layout_below="@id/labelPseudo"
        android:layout_above="@+id/labelMdp"
        android:layout_alignLeft="@+id/inputMdp"
        android:layout_alignStart="@+id/inputMdp"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:text="@string/labelMdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelMdp"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/inputMdp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/labelMdp"
        android:layout_alignRight="@+id/btnSeConnecter"
        android:layout_alignEnd="@+id/btnSeConnecter" />


    <Button
        android:text="@string/btnInscrire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSinscrire"
        android:layout_below="@+id/btnSeConnecter"
        android:layout_toRightOf="@+id/labelMdp"
        android:layout_toEndOf="@+id/labelMdp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp" />

    <Button
        android:text="@string/btnConnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSeConnecter"
        android:layout_below="@+id/inputMdp"
        android:layout_alignRight="@+id/btnSinscrire"
        android:layout_alignEnd="@+id/btnSinscrire"
        android:layout_marginTop="22dp" />






</RelativeLayout>
