        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleCreateGroupe"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Space android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:text="@string/lblNouvGroupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:id="@+id/labelNomGroupe" />
    <Space android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:paddingLeft="20dp"
        android:text=""
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/inputNomGroupe" />

    <Space android:layout_width="match_parent"
        android:layout_height="73dp" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:id="@+id/textOperation" />

    <Space android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:text="@string/btnCreaGroupe"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreaGroupe" />
