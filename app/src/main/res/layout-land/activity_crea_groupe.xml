<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:text="@string/titleCreateGroupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleCreateGroupe"
        android:paddingBottom="16dp"
        android:textSize="@dimen/h1"/>


    <TextView
        android:text="@string/labelNouvGroupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labelNomGroupe"
        android:layout_below="@+id/titleCreateGroupe"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:paddingLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/inputNomGroupe"
        android:layout_below="@+id/labelNomGroupe"/>


    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:id="@+id/textOperation"
        android:paddingBottom="30dp"
        android:layout_below="@+id/inputNomGroupe"
        />

    <Button
        android:text="@string/btnCreaGroupe"
        android:layout_width="200dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreaGroupe"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>