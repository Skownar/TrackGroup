<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:text="@string/nouvGroupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nouvGroupe"
        android:paddingBottom="16dp"
        android:textSize="@dimen/h1"/>

    <TextView
        android:text="@string/lblNouvGroupe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblNouvGroupe"
        android:layout_below="@+id/nouvGroupe"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>


    <Button
        android:text="@string/btnCreaGroupe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreaGroupe"
        android:layout_below="@+id/nomGroupe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/nomGroupe"
        android:layout_below="@+id/lblNouvGroupe"
        android:layout_centerHorizontal="true" />

</RelativeLayout>